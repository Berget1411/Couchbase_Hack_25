generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  apiKey        String    @unique @default(cuid())
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  appSessions   AppSession[]
  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model AppSession {
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  githubRepo AppGithubRepo? @relation(fields: [githubRepoId], references: [id], onDelete: Cascade)
  githubRepoId String?
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("app_session")
}

model AppGithubRepo {
  id String @id @default(cuid())
  name String
  fullName String
  description String?
  url String
  stars Int
  forks Int?
  issues Int?
  pullRequests Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  appSessions AppSession[]
  @@unique([fullName])
  @@map("app_github_repo")
}

